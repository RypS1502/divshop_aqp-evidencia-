                    <h5 class="card-title">
                        <%= prod.name %>
                    </h5>
                    <p class="card-text">$ <span><%= prod.price %></span> </p>
                    <a href="/shoppingcart/add/<%= prod._id %>" class="btn btn-dark btn-lg btn-block">
